{
  "name": "ros2helper",
  "displayName": "ros2-helper",
  "description": "Tools to aid in ROS2 development",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/package.xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ros2helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ros2helper.colconBuild",
        "title": "Colcon Build all packages"
      },
      {
        "command": "ros2helper.specificColonBuild",
        "title": "Colcon build this package"
      },
      {
        "command": "ros2helper.launch",
        "title": "Launch this file"
      },
      {
        "command": "ros2helper.pythonTest",
        "title": "Python test"
      }
    ],
    "keybindings": [
      {
        "command": "ros2helper.helloWorld",
        "key": "ctrl+alt+h",
        "when": "editorTextFocus"
      },
      {
        "command": "ros2helper.colconBuild",
        "key": "ctrl+alt+b",
        "when": "true"
      },
      {
        "command": "ros2helper.colconBuild",
        "key": "ctrl+shift+b",
        "when": "true"
      },
      {
        "command": "ros2helper.pythonTest",
        "key": "ctrl+shift+p",
        "when": "true"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ros2helper.specificColonBuild",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}